<Layout title="OAprova – Sua aprovação na OAB começa aqui">
  <!-- Animated Mesh Background -->
  <div class="mesh-gradient"></div>

  <!-- Floating Particles -->
  <div class="particles">
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
