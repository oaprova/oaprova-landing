  <!-- HERO SECTION - Ultra Disruptive -->
  <section class="min-h-screen pt-32 pb-20 md:pt-40 md:pb-32 overflow-hidden relative">
    <!-- Background Blobs -->
    <div class="absolute top-20 -right-40 w-[600px] h-[600px] bg-gold/20 blob-pulse blur-3xl"></div>
    <div class="absolute -bottom-40 -left-40 w-[500px] h-[500px] bg-mocha-400/20 blob blur-3xl" style="animation-delay: -4s;"></div>
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-mocha-300/10 blob blur-3xl" style="animation-delay: -2s;"></div>

    <div class="container mx-auto px-6 relative z-10">
      <div class="grid lg:grid-cols-2 gap-16 items-center min-h-[80vh]">
        <!-- Left Content -->
        <div class="space-y-8">
          <!-- Animated Badge -->
          <div class="hero-badge inline-flex items-center gap-3 glass-card px-5 py-3 rounded-full">
            <span class="relative flex h-3 w-3">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
              <span class="relative inline-flex rounded-full h-3 w-3 bg-green-500"></span>
            </span>
            <span class="text-mocha-700 font-medium">+2.500 alunos estudando agora</span>
            <span class="text-mocha-400">•</span>
            <span class="text-gold font-semibold">AO VIVO</span>
          </div>

          <!-- Main Headline with Text Animation -->
          <div class="space-y-2">
            <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold leading-[1.1]">
              <span class="hero-word inline-block" style="animation-delay: 0.3s">Conquiste</span>
              <span class="hero-word inline-block" style="animation-delay: 0.45s">sua</span>
