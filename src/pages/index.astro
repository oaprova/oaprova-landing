    <div class="container mx-auto px-6 py-4">
      <div class="flex items-center justify-between">
        <a href="/" class="text-2xl font-bold text-gradient text-glow">OAprova</a>
        <div class="hidden md:flex items-center gap-8">
          <a href="#features" class="text-mocha-700 hover:text-mocha-900 transition-colors underline-animate">Recursos</a>
          <a href="#how-it-works" class="text-mocha-700 hover:text-mocha-900 transition-colors underline-animate">Como Funciona</a>
          <a href="#pricing" class="text-mocha-700 hover:text-mocha-900 transition-colors underline-animate">Preços</a>
